<div class="container">
<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> - <%= dose.ingredient.name %> -
    <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
<br>
<%= link_to "Go back", cocktails_path, class: "btn btn-warning" %>
</div>
